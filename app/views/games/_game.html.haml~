        %span{class: "glyphicon glyphicon-edit", "aria-hidden": "true"}
        Edit
  %td= link_to "Show", game_path(game)
  %td= link_to "list of Matches", game_matches_path(game)
  %td= link_to "list of Tournaments", game_tournaments_path(game)
  -if can? :create, Match  
    %td= link_to "Create Match", new_game_match_path(game)
  -if can? :destroy, game
    %td= link_to "Delete",'#mymodal', "data-toggle": 'modal', class: "link1", "data-id": game.id

