.container
  .row
    .col-md-4.col-md-offset-7
      .panel.panel-default
        .panel-heading
          %strong Login
        .panel-body
          =form_for @user,{url: session_path(resource_name),:html => {class: "form-horizontal", role: "form"}} do  |f|
            .form-group
              %label.col-sm-3.control-label{:for => "inputEmail3"} Email
              .col-sm-9
                =f.text_field :email, {class: "form-control", :placeholder => "Email", :required => "", :type => "email"}
            .form-group
              %label.col-sm-3.control-label{:for => "inputPassword3"} Password
              .col-sm-9
                =f.text_field :password, {class: "form-control", :placeholder => "Password", :required => "", :type => "password"}
            .form-group
              .col-sm-offset-3.col-sm-9
                .checkbox
                  %label
                    %input{:type => "checkbox"} Remember me
            .form-group.last
              .col-sm-offset-3.col-sm-9
                %button.btn.btn-success.btn-sm{:type => "submit"} Sign in
                %button.btn.btn-default.btn-sm{:type => "reset"} Reset
        .panel-footer
          = render "devise/shared/links"
