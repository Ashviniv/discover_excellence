%center
  %h2 Sports League
.container
  = form_for(resource, as: resource_name, url: session_path(resource_name),:html => {class: "form-signin"}) do |f|
    .form-signin-heading
      %h2 Sign In
    .field
      = f.email_field :email, {class: "form-control",:autofocus => "", :placeholder => "Email address", :required => "", :type => "email",:style => "width: 300px;"}
    .field
      = f.password_field :password, {autocomplete: "off", class: "form-control", :autofocus => "", :placeholder => "Password", :required => "", :style => "width: 300px;"}
    - if devise_mapping.rememberable?
      .checkbox
        = f.check_box :remember_me
        = f.label :remember_me
    .actions
      = f.submit "Log in", {class: "btn btn-lg btn-primary btn-block", :type => "submit",:style => "width: 300px;"}
  = render "devise/shared/links"
