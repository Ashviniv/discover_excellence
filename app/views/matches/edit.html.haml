=render "shared/header"
%h3 Edit a Match
=nested_form_for @match do |f|
  =@match.errors.full_messages unless @match.valid?
  %h5 Enter details
  =f.label "venue"
  =f.text_field :venue
  %br
  =f.label "played_on"
  =f.text_field :played_on
  %br
  =f.fields_for :players do |m|
    %br
    =m.label "Player"
    =m.text_field :name
    =m.link_to_remove "remove player"
    %br
  =f.link_to_add "Add A player" ,:players
  =f.submit
