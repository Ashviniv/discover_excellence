=render "shared/header"
-if can? :create, Match
  - if params[:tournament_id]
    %a{:class=> "btn btn-default" ,:type => "button", "href"=> new_game_tournament_match_path(params[:game_id],params[:tournament_id]), style: "background-color: #D14836;"} New Match
  - else
    %a{:class=> "btn btn-default" ,:type => "button", "href"=> new_game_match_path(params[:game_id]), style: "background-color: #D14836;"} New Match
%h3 Matches
= will_paginate @matches, renderer: BootstrapPagination::Rails
%table.table
  %tr
    %th
      Venue
    %th
      Played on
    %th
      winner
    %th{:colspan => "4"}
      Actions
  - @matches.each do |t|
    %tr
      - if params[:tournament_id]
        %td= t.venue
        %td= t.played_on
        %td= t.winner
        -if can? :update, t
          %td
            %a{"href": edit_game_tournament_match_path(params[:game_id],params[:tournament_id], t)}
              %span{class: "glyphicon glyphicon-edit", "aria-hidden": "true"}
              Edit
        %td
          %a{"href": game_tournament_match_path(params[:game_id], params[:tournament_id], t)}
            %span{class: "glyphicon glyphicon-file", "aria-hidden": "true"}
            Display
        %td
          %a{"href": game_tournament_match_players_path(params[:game_id], params[:tournament_id], t)}
            %span{class: "glyphicon glyphicon-list-alt", "aria-hidden": "true"}
            Players
        - if can? :destroy, t
          %td
            %a{"href": '#mymodal', "data-toggle": 'modal', class: "link_match", "data-id": t.id, "game-id": params[:game_id], "tournament-id": params[:tournament_id]}
              %span{class: "glyphicon glyphicon-trash", "aria-hidden": "true"}
              Delete

      - else
        %td= t.venue
        %td= t.played_on
        %td= t.winner
        -if can? :update, t
          %td
            %a{"href": edit_game_match_path(params[:game_id], t)}
              %span{class: "glyphicon glyphicon-edit", "aria-hidden": "true"}
              Edit
        %td
          %a{"href": game_match_path(params[:game_id], t)}
            %span{class: "glyphicon glyphicon-file", "aria-hidden": "true"}
            Display
        %td
          %a{"href": game_match_players_path(params[:game_id], t)}
            %span{class: "glyphicon glyphicon-list-alt", "aria-hidden": "true"}
            Players
        - if can? :destroy, t
          %td
            %a{"href": '#mymodal', "data-toggle": 'modal', class: "link_match", "data-id": t.id, "game-id": params[:game_id]}
              %span{class: "glyphicon glyphicon-trash", "aria-hidden": "true"}
              Delete
 

#mymodal.modal.fade{role:"dialog" }
  .modal-dialog{role:"document"}
    .modal-content
      .modal-header
        .modal-body
          %p Are you sure?
        .modal-footer
        -if params[:tournament_id]
          %a{:class=> "btn btn-default" ,id:"yes3",:type => "button","data-method": :delete, "href"=> ""} Yes
        -else
          %a{:class=> "btn btn-default" ,id:"yes2",:type => "button","data-method": :delete, "href"=> ""} Yes
        %button.btn.btn-primary{:type => "button","data-dismiss": "modal"} No

