=render "shared/header"
=flash[:notice]
.col-lg-6
  .well.well-sm
    %h3 Add New Player
    .form-group
      -unless @match
        =nested_form_for @player, {url: players_path(@match), method: :post, :html => {:multipart => true}} do |f|
          =f.label "Name"
          =f.text_field :name, {class: "form-control", style: "width: 350px;" }
          =f.label "photo"
          = f.file_field :avatar
          
          %br
          =f.submit "Create"
      - if @game
        -unless @tournament
          =nested_form_for @player, {url: game_match_players_path(@game, @match), method: :post} do |f|
          
            = f.label "Name"
            = f.text_field :name, {class: "form-control", style: "width: 350px;" }
            = f.label "photo"
            = f.file_field :avatar
            
            %br
            =f.submit "Create"
        - if @tournament
          =nested_form_for @player, {url: game_tournament_match_players_path(@game,@tournament, @match), method: :post} do |f|
          
            = f.label "Name"
            = f.text_field :name, {class: "form-control", style: "width: 350px;" }
            %br
            = f.label "photo"
            = f.file_field :avatar
            %br
            = f.fields_for :scores do |s|
              =s.label "Scores"
              =s.text_field :points, {class: "form-control", style: "width: 350px;" }
              =s.hidden_field :match_id, {value: @match.id}
              =s.hidden_field :tournament_id, {value: @tournament.id}
            %br
            =f.submit "Create"


