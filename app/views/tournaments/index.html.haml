=render "shared/header"
%br
=link_to "Add", new_tournament_path,{type: "button"}
%h3 Tournaments
= will_paginate @tournaments
%table.table
  %tr
    %th
      Name
    %th
      Number of matches
    %th
      winner
    %th{:colspan => "3"}
      Actions
  - @tournaments.each do |t|
    %tr
      %td= t.name
      %td= t.matches.count
      %td= t.winner
      - if can? :show, @tournament
        %td=link_to "Show", tournament_path(t)

      %td=link_to "Edit", edit_tournament_path(t)
      %td=link_to "Matches",tournament_matches_path(t)
      - if can? :delete, @tournament
        %td=link_to "Delete", '#mymodal', "data-toggle": 'modal', class: "link", "data-id": t.id
#mymodal.modal.fade{role:"dialog" }
  .modal-dialog{role:"document"}
    .modal-content
      .modal-header
        .modal-body
          %p Are you sure?
        .modal-footer
        %a{:class=> "btn btn-default" ,id:"yes",:type => "button","data-method": :delete, "href"=> ""} Yes
        %button.btn.btn-primary{:type => "button","data-dismiss": "modal"} No

