=render "shared/header"
=flash[:notice]
%br
- if can? :create, Tournament
  %a{:class=> "btn btn-default" ,:type => "button", "href"=> new_game_tournament_path(params[:game_id], params[:tournament_id]), style:  "background-color: #D14836;"} New Tournament
%h3 Tournaments
= will_paginate @tournaments,renderer: BootstrapPagination::Rails
%table.table
  %tr
    %th
      Name
    %th
      Number of matches
    %th
      winner
    %th{:colspan => "3"}
      Actions
  - @tournaments.each do |t|

    %tr
      %td= t.name
      %td= t.matches.count
      %td= t.winner
      -if can? :update, t
        %td
          %a{"href": edit_game_tournament_path(params[:game_id], t)}
            %span{class: "glyphicon glyphicon-edit", "aria-hidden": "true"}
            Edit
      %td
        %a{"href": game_tournament_path(params[:game_id], t)}
          %span{class: "glyphicon glyphicon-file", "aria-hidden": "true"}
          Display
      %td
        %a{"href": game_tournament_matches_path(params[:game_id], t)}
          %span{class: "glyphicon glyphicon-list-alt", "aria-hidden": "true"}
          Matches
      - if can? :destroy, t
        %td
          %a{"href": '#mymodal', "data-toggle": 'modal', class: "link", "data-id": t.id, "game-id": params[:game_id]}
            %span{class: "glyphicon glyphicon-trash", "aria-hidden": "true"}
            Delete
#mymodal.modal.fade{role:"dialog" }
  .modal-dialog{role:"document"}
    .modal-content
      .modal-header
        .modal-body
          %p Are you sure?
        .modal-footer
        %a{:class=> "btn btn-default" ,id:"yes",:type => "button","data-method": :delete, "href"=> ""} Yes
        %button.btn.btn-primary{:type => "button","data-dismiss": "modal"} No

