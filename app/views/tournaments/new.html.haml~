=render "shared/header"
%h3 Create a Tournament
=nested_form_for @tournament,{url: game_tournaments_path(f),method: :post} do |f|
  =f.label "Name"
  =f.text_field :name
  =f.fields_for :matches do |m|
    =m.label "venue"
    =m.text_field :venue
    %br
    =m.label "played on:"
    =m.text_field :played_on
    =m.link_to_remove "remove match"
    %br
  =f.link_to_add "Add a Match", :matches
  %br
  =f.submit
