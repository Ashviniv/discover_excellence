=render "shared/header"
.col-lg-6
  .well.well-sm
    %h3 Create a Tournament
    =nested_form_for @tournament,{url: game_tournaments_path,method: :post} do |f|
      =f.label "Name"
      =f.text_field :name, {class: "form-control", style: "width: 350px;" }
      =f.fields_for :matches do |m|
        =m.label "venue"
        =m.text_field :venue ,{class: "form-control", style: "width: 350px;" }
        %br
        =m.label "played on:"
        =m.text_field :played_on, {class: "form-control", style: "width: 350px;" }
        =m.link_to_remove "remove match"
        =m.hidden_field :game_id,{value: params[:game_id]}
        %br
      =f.link_to_add "Add a Match", :matches
      %br
      =f.submit
