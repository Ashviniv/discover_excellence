=render "shared/header"
.col-lg-6
  .well.well-sm
    %h3 Edit a Tournament
    =nested_form_for @tournament, {url: game_tournaments_path(params[:game_id]), method: :post} do |f|
      =@tournament.errors.full_messages unless @tournament.valid?
      =f.label "Name"
      =f.text_field :name, {class: "form-control", style: "width: 350px;" }
      %br
      %h4 Add a Match

      =f.fields_for :matches do |m|
        %br
        =m.label "Venue"
        =m.text_field :venue, {class: "form-control", style: "width: 350px;" }
        %br
        =m.label "played On"
        =m.text_field :played_on ,{class: "form-control", style: "width: 350px;" }
        =m.link_to_remove "remove the match"
      %p
        =f.link_to_add "Add one more match", :matches 
      %br
      =f.submit
